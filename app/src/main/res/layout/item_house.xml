<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/communityOneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingStart="@dimen/default_border"
        android:paddingTop="8dp"
        android:paddingEnd="@dimen/default_border"
        android:paddingBottom="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/communityOneNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/communityOneCountTv"
            android:textSize="14sp"
            tools:text="光谷广场" />

        <TextView
            android:id="@+id/communityOneAddressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/communityOneNameTv"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@+id/communityOneCountTv"
            android:textColor="@color/color_text_gray"
            android:textSize="12sp"
            tools:text="光的撒的撒大谷广场" />

        <TextView
            android:id="@+id/communityOneCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:textColor="@color/color_community_text"
            tools:text="3个工地 >" />
    </RelativeLayout>

</LinearLayout>