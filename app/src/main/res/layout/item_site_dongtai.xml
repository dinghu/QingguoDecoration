<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/head"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ico_header_2x"
            app:riv_border_width="0dip"
            app:riv_corner_radius="100dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/head"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丁虎"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="设计师"
                android:textColor="@color/color_text_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="挑了个几日，开工啦，一定要注意保护。不要找坏了水管。"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/photo_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/photo1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:background="@color/app_pic_bg"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/photo2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_pic_bg"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/photo3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_pic_bg"
                        android:scaleType="centerCrop" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/photo4"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_pic_bg"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/photo5"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_pic_bg"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/photo6"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_pic_bg"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/photo7"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_pic_bg"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/photo8"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_pic_bg"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/photo9"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_pic_bg"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="07月20日"
                    android:textColor="@color/color_text_gray" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>