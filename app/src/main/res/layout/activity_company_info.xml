<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.fkh.support.ui.widget.TitleView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:titleText="公司信息" />

        <com.fkh.support.ui.widget.KeyValueView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kvkey="公司LOGO"
            app:kvrightImage="@drawable/icon_more"
            app:kvvalueGravity="right"
            app:kvvaluehint="专业版" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color" />

        <com.fkh.support.ui.widget.KeyValueView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kvkey="公司类型"
            app:kvrightImage="@drawable/icon_more"
            app:kvvalueGravity="right"
            app:kvvaluehint="装修公司" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color" />

        <com.fkh.support.ui.widget.KeyValueView
            android:id="@+id/shortname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kvkey="公司简称"
            app:kvrightImage="@drawable/icon_more"
            app:kvvalueGravity="right"
            app:kvvaluehint="装修公司" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/line_color_light" />

        <com.fkh.support.ui.widget.KeyValueView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kvkey="公司电话"
            app:kvrightImage="@drawable/icon_more"
            app:kvvalueGravity="right"
            app:kvvaluehint="13025894568" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color" />

        <com.fkh.support.ui.widget.KeyValueView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kvkey="公司地址"
            app:kvrightImage="@drawable/icon_more"
            app:kvvalueGravity="right"
            app:kvvaluehint="上海市黄浦区" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/line_color_light" />

        <com.fkh.support.ui.widget.KeyValueView
            android:id="@+id/slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kvkey="公司口号"
            app:kvrightImage="@drawable/icon_more"
            app:kvvalueGravity="right"
            app:kvvaluehint="喊我们一起激发潜力" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color" />

        <com.fkh.support.ui.widget.KeyValueView
            android:id="@+id/brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kvkey="公司简介"
            app:kvrightImage="@drawable/icon_more"
            app:kvvalueGravity="right"
            app:kvvaluehint="未填写" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/line_color_light" />

        <com.fkh.support.ui.widget.KeyValueView
            android:id="@+id/qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kvkey="公司资质图片"
            app:kvrightImage="@drawable/icon_more"
            app:kvvalueGravity="right"
            app:kvvaluehint="未上传" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:background="@color/line_color" />

        <com.fkh.support.ui.widget.KeyValueView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:kvkey="公司展示图片"
            app:kvrightImage="@drawable/icon_more"
            app:kvvalueGravity="right"
            app:kvvaluehint="未上传" />


    </LinearLayout>


</LinearLayout>